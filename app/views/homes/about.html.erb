<div class="container">
  <div class="row">
    <h1 class="px-3 mx-auto">
      Welcome to
      <i class="fas fa-book"></i>
      <strong>Bookers</strong>
      !
    </h1>
  </div>
</div>

<% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag profile_image, :image %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>